{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "chainId": {
      "oneOf": [
        { "type": "integer", "minimum": 0 },
        { "type": "string", "pattern": "^0x[a-fA-F0-9]+$" }
      ]
    },
    "nonce": {
      "oneOf": [
        { "type": "integer", "minimum": 0 },
        { "type": "string", "pattern": "^0x[a-fA-F0-9]+$" }
      ]
    },
    "maxPriorityFeePerGas": {
      "oneOf": [
        { "type": "integer", "minimum": 0 },
        { "type": "string", "pattern": "^0x[a-fA-F0-9]+$" }
      ]
    },
    "maxFeePerGas": {
      "oneOf": [
        { "type": "integer", "minimum": 0 },
        { "type": "string", "pattern": "^0x[a-fA-F0-9]+$" }
      ]
    },
    "gasLimit": {
      "oneOf": [
        { "type": "integer", "minimum": 0 },
        { "type": "string", "pattern": "^0x[a-fA-F0-9]+$" }
      ]
    },
    "to": {
      "type": ["string", "null"],
      "pattern": "^0x[a-fA-F0-9]{40}$"
    },
    "value": {
      "oneOf": [
        { "type": "integer", "minimum": 0 },
        { "type": "string", "pattern": "^0x[a-fA-F0-9]+$" }
      ]
    },
    "data": {
      "type": "string",
      "pattern": "^0x[a-fA-F0-9]*$"
    },
    "accessList": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "address": {
            "type": "string",
            "pattern": "^0x[a-fA-F0-9]{40}$"
          },
          "storageKeys": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^0x[a-fA-F0-9]{64}$"
            }
          }
        },
        "required": ["address", "storageKeys"],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "chainId",
    "nonce",
    "maxPriorityFeePerGas",
    "maxFeePerGas",
    "gasLimit",
    "to",
    "value",
    "data",
    "accessList"
  ],
  "additionalProperties": false
}
